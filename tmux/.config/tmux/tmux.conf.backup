#set -g pane-border-lines heavy                 # needs tmux ≥ 3.2; else remove this line

# Pane headers (the trick)
set -g pane-border-status top
set -g pane-border-format '#{?pane_active,#[reverse]#[default],   }#P #{pane_current_command}'

set -g pane-border-style fg=colour239
set -g pane-active-border-style fg=orange

set -g window-style 'fg=default,bg=default'
set -g window-active-style 'fg=default,bg=default'

set -g history-limit 100000
set -g status-interval 5

# Truecolor
set -g default-terminal "tmux-256color"

# first window and tab 1, not 0
set -g base-index 1
setw -g pane-base-index 1

# Alt+Number → select window
bind -n C-1 select-window -t 1
bind -n C-2 select-window -t 2
bind -n C-3 select-window -t 3
bind -n C-4 select-window -t 4
bind -n C-5 select-window -t 5
bind -n C-6 select-window -t 6
bind -n C-7 select-window -t 7
#bind -n C-8 select-window -t 8
#bind -n C-9 select-window -t 9

# Ctrl+Number → select pane
#bind -n M-1 select-pane -t 1 
#bind -n M-2 select-pane -t 2 
#bind -n M-3 select-pane -t 3 
#bind -n M-4 select-pane -t 4 
#bind -n M-5 select-pane -t 5 
#bind -n M-6 select-pane -t 6 
#bind -n M-7 select-pane -t 7 


# Change prefix to Ctrl+a (like screen)
set -g prefix C-a
unbind C-b
bind C-a send-prefix

# Fullscreen toggle
bind f resize-pane -Z                                    

# Better splitting shortcuts
#bind ' split-window -h
#bind - split-window -v
#unbind '''
#unbind '"'
#unbind %


# Enable mouse support
set -g mouse on

# next/prev pane
bind -n S-Right select-pane -t :.+    # Shift+Right = next pane
bind -n S-Left select-pane -t :.-     # Shift+Left = previous pane

# Vim-style pane switching without prefix
bind -n M-Left  select-pane -L
bind -n M-Right select-pane -R
bind -n M-Up    select-pane -U
bind -n M-Down  select-pane -D

# reload config
bind r source-file ~/.tmux.conf \; display "Config reloaded!"

# List of plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-resurrect'

# Initialize TPM (keep at bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'